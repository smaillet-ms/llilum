<Rule
      Name="ConfigurationLlilum"
      DisplayName="Llilum Configuration"
      PageTemplate="generic"
      Description="Llilum Configuration"
      SwitchPrefix="/"
      Order="100"
      xmlns="http://schemas.microsoft.com/build/2009/properties">
